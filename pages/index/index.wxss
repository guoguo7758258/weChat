/* pages/index/index.wxss */
page{
  margin-bottom: 5rpx;
}
.banner{
  width: 100%;
  height: 1068rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.banner .page-section page-section-spacing .swiper{
  height: 100%;
}
swiper{
  height: 1068rpx;
}
.banner navigator{
  height: 1068rpx;
}
.nav{
  height: 175rpx;
}
.nav-tips{
  height:50rpx;
  line-height: 50rpx; 
  text-align: center;
  display: flex;
  justify-content: space-between;
}
.nav-tips view{
  width: 35%;
  font-size: 18rpx;
  color: #e5e5e5;
}
.nav-tips view icon{
  margin-right: 5rpx;
}
.icon-nav{
  display: flex;
  justify-content: space-between;
  text-align: center;
  margin-bottom: 20rpx;
}
.icon-nav .nav-wrap{
  width: 150rpx;
}
.icon-nav .nav-wrap image{
  width: 70rpx;
  height: 70rpx;
}
.icon-nav .nav-wrap span{
  display: block;
  font-size: 25rpx;
  color: #757575;
}
.recommend{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recommend view{
  height: 485rpx;
  width: 49.7%;
  display: inline-block;
  overflow: hidden;
}
.recommend view navigator{
  display: block;
  height: 240rpx;
  margin-bottom: 5rpx;
}
.recommend view .recommend-first{
  height: 480rpx;
}
.recommend view image{
  width: 100%;
  height: 100%;
}
.special{
  width: 100%;
  height: auto;
  background: #F5F5F5;
}
.all-title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #ffffff;
  font-size: 30rpx;
  text-align: center;
}
.products-top{
  height: 406rpx;
  width: 100%;
}
.products-top image{
  width: 100%;
  height: 100%;
}
.list-wrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background: #ffffff;
}
.products-list{
  width: 49.5%;
  height: 544rpx;
  background:#f4f3ef;
  float: left;
  box-sizing: border-box;
  padding-top: 40rpx;
  margin-bottom: 10rpx;
}
.products-list image{
  width: 300rpx;
  height: 300rpx;
}
.products-list view{
  text-align: center;
  font-size: 30rpx;
  color: #000000;
  line-height: 50rpx;
}
.products-list text{
  display: inline-block;
  margin-right: 10rpx;
  text-align: center;
  font-size: 27rpx; 
  font-weight: bold;
  color: #777777;
  line-height: 60rpx;
}
.products-list view:last-child text:first-child{
  color: rgb(255, 103, 0); 
}
.products-list view:last-child text:last-child{
  text-decoration: line-through;
  padding-left: 5rpx;
}
.see-more{
  background: #f4f3ef;
  color: #f35b4e; 
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}