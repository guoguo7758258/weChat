/* pages/mine/mine.wxss */
page{
  background: #e9e9e9;
}
.login_logout{
  width: 100%;
  height: 180rpx;
  box-sizing: border-box;
  padding: 5.5% 5% 3%;
  background: #e8340e;
}
.user_img{
  width: 100rpx;
  height: 100rpx;
  background: url(https://oss.static.nubia.cn/upload/59c0c0948a3fd71.png) no-repeat center;
  border: 0;
  padding: 4rpx;
  margin: 0;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.user_img image{
  width: 100%;
  height: 100%;
}
.login{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  float: left;
  padding-left: 2%;
  color: #fff;
}
.youhui-box{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
}
.youhui-box view{
  font-size: 27rpx;
  text-align: center;
}
.youhui-box view text{
  display: block;
}
.order-box{
  border-top: 2rpx solid #ccc;
  margin-top: 10rpx;
  background: #fff;
  border-bottom: 2rpx solid #ccc;
}
.all-order{
  width: 100%;
  padding-left: 5%;
  padding-right: 5%;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 27rpx;
}
.all-order image{
  float: right;
  width: 36rpx;
  height: 36rpx;
  margin-top: 26rpx;
}
.bottom-box{
  width: 100%;
  height: 144rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 20rpx;
}
.bottom-box view image{
  display: block;
  width: 75rpx;
  height: 75rpx;
}
.bottom-box view text{
  margin-top: 10rpx;
  display: block;
  text-align: center;
}