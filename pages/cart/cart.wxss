/* pages/cart/cart.wxss */
page{
  background: #e5e5e5;
}
.big-wrap{
  width: 100%;
  height: auto;
  margin-bottom: 110rpx;
  overflow: hidden;
}
.product-wrap{
  width: 1000rpx;
  height: 218rpx;
  margin-top: 10rpx;
  background: #ffffff;
  padding-left: 15rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  display: flex;
}
.select{
  margin-top: 75rpx;
}
.wrap-left{
  width: 20%;
  height: 100%;
  box-sizing: border-box;
  padding:15rpx 0rpx;
}
.wrap-left .product-img{
  width: 100%;
  height: 100%;
}
.wrap-left .product-img image{
  width: 100%;
  height: 100%;
}
.wrap-right{
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  padding: 15rpx;
}
.right-top{
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 35rpx;
  color: #2c2c2c;
  overflow: hidden;
}
.right-bottom{
  width: 100%;
  height: 94rpx;
  font-size: 27rpx;
  line-height: 94rpx;
}
.product-price{
  float: left;
  color: #87888c;
}
.product-button{
  float: right;
  font-size: 30rpx;
}
.product-button text{
  height: 50rpx;
  display: inline-block;
  width: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.delete-product{
  text-align: center;
  float: left;
  width: 24%;
  color: #ffffff;
  height: 100%;
  font-size: 30rpx;
  line-height: 218rpx;
  background: #ff4d4d; 
}
.numReduce{
  border: 1px solid #ff4d4d;
  border-radius: 50%;
  color: #ff4d4d;
}
.numAdd{
  border: 1px solid #ff4d4d;
  border-radius: 50%;
  color: #ff4d4d;
}
.product-num{
  font-size: 30rpx;
  border: 0rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #ffffff;
  box-sizing: border-box;
  padding-left: 15rpx;
}
.select-all{
  float: left;
  font-size: 28rpx;
}
.footer-right{
  float: right;
}
.price-all{
  float: left;
  font-size: 28rpx;
}
.price-all text{
  color: rgb(255, 77, 77);
  font-weight: bold;
}
.go-jiesuan{
  float: right;
  width: 160rpx;
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  margin-left: 15rpx;
  background: rgb(255, 77, 77);
}
.nullCart{
  width: 100%;
  text-align: center;
  height: 600rpx;
  box-sizing: border-box;
  background: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1544267887411&di=6b53d69a4f285ab2802ed71b70de04cb&imgtype=0&src=http%3A%2F%2Fwx4.sinaimg.cn%2Fbmiddle%2F006DFKaTgy1fmzt8s9ls0j30m80kijtr.jpg');
  color: #ffffff;
  position: relative;
}
.nullCart text{
  position: absolute;
  width: 50rpx;
  top: 45rpx;
  display: block;
}
.nullCart .nullCartTitleOne{
  left: 50rpx;
}
.nullCart .nullCartTitleTwo{
  left: 100rpx;
}